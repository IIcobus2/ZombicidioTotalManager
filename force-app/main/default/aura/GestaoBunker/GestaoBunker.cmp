<aura:component implements="flexipage:availableForRecordHome" access="global">
    <aura:attribute name="options" type="List" default="[]" />
    <aura:handler name="init" value="{! this }" action="{! c.init }" />

    <lightning:card title="Gestão de Bunkers">
        <aura:set attribute="actions">
            <lightning:button label="Incluir Humano" />
        </aura:set>
        <p class="slds-p-horizontal_small">
            <lightning:combobox
                name="general"
                label="Selecione um Bunker:"
                placeholder="selecione um bunker disponível"
                options="{!v.options }"
                onchange="{!c.handleChange }"
            />
        </p>
    </lightning:card>
</aura:component>
