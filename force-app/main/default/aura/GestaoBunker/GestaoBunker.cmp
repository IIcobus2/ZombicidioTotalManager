<aura:component controller="GestaoBunkerCMPController" implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="options" type="List" />
    <!-- <aura:attribute name="recordId" type="String" /> -->
    <aura:handler name="init" value="{! this }" action="{! c.init }" />

    <lightning:card title="Gestão de Bunkers">
        <aura:set attribute="actions">
            <lightning:button label="Incluir Humano" />
        </aura:set>
        <div style="display: block" data-js="campo1">
            <p class="slds-p-horizontal_small">
                <lightning:combobox
                    name="listaBunker"
                    label="Selecione um Bunker:"
                    placeholder="selecione um bunker disponível"
                    options="{!v.options }"
                    onchange="{!c.handleChange }"
                />
            </p>
        </div>
        <div style="display: none" data-js="campo2">
            <p>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
            </p>
        </div>
    </lightning:card>
</aura:component>
